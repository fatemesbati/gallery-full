# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
POST    /upload/post                     controllers.PostController.uploadPost(request:Request)
POST    /post/comment                    controllers.CommentController
GET     /post/comments                   controllers.CommentController

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# angular
GET     /                           controllers.FrontendController.index()
GET     /external/*fileName         controllers.PostController.serveAvatar(fileName: String)